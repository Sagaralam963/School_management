{
  "name": "School",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-schoolmanagement": "cds watch --open ns.schoolmanagement/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy School --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "connectivity": true,
      "destinations": true,
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db/school.sqlite"
        },
        "schema_evolution": "auto"
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/schoolmanagement"
  ]
}
